<div class="h-full py-8 px-6 text-white text-lg bg-gray-800 rounded-3xl text-left" style="
    background:
      linear-gradient(0deg, rgba(255, 255, 255, 0.02), rgba(255, 255, 255, 0.02)),
      linear-gradient(160deg, rgba(61, 64, 69, 0.1) 19%, rgba(22, 22, 26, 0.1) 71%),
      radial-gradient(51% 93% at 50% 39%, rgba(35, 36, 40, 0.8) 0%, rgba(22, 22, 26, 0.064) 100%);
    box-shadow: inset 0px 0px 2px rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(15px);
  ">
  <i class="flex items-center justify-center w-12 h-12 rounded-2xl text-3xl <%= content_for :security_card__icon %>"
    style="background-image:
      linear-gradient(139deg, rgba(255, 255, 255, 0.07) 18%, rgba(255, 255, 255, 0.0175) 77%),
      radial-gradient(78% 78% at 72% 0%, #232428bb 0%, #232428 100%);
  "></i>
  <h3 class="mt-4 font-medium">
    <%= content_for :security_card__title %>
  </h3>
  <div class="mt-4 text-gray-50 space-y-5">
    <%= content_for :security_card__content %>
  </div>
</div>

<%# Flushing %>
<% content_for :security_card__icon, '', flush: true %>
<% content_for :security_card__title, '', flush: true %>
<% content_for :security_card__content, '', flush: true %>