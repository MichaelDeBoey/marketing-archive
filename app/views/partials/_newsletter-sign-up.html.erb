<script src="https://f.convertkit.com/ckjs/ck.5.js"></script>
<form
  action="https://app.convertkit.com/forms/<%= ENV['CONVERTKIT_FORM_ID'] %>/subscriptions"
  class="seva-form formkit-form"
  method="post"
  data-sv-form="<%= ENV['CONVERTKIT_FORM_ID'] %>"
  data-uid="<%= ENV['CONVERTKIT_UID'] %>"
  data-format="inline"
  data-version="5"
  data-options='{"settings":{"after_subscribe":{"action":"redirect","success_message":"Success! Now check your email to confirm your subscription.","redirect_url":"https://maybe.co/now-thanks"},"analytics":{"google":null,"facebook":null,"segment":null,"pinterest":null,"sparkloop":null,"googletagmanager":null},"modal":{"trigger":"timer","scroll_percentage":null,"timer":5,"devices":"all","show_once_every":15},"powered_by":{"show":false,"url":"https://convertkit.com?utm_campaign=poweredby&amp;utm_content=form&amp;utm_medium=referral&amp;utm_source=dynamic"},"recaptcha":{"enabled":false},"return_visitor":{"action":"show","custom_content":""},"slide_in":{"display_in":"bottom_right","trigger":"timer","scroll_percentage":null,"timer":5,"devices":"all","show_once_every":15},"sticky_bar":{"display_in":"top","trigger":"timer","scroll_percentage":null,"timer":5,"devices":"all","show_once_every":15}},"version":"5"}'
>
  <div>
    <ul
      class="formkit-alert formkit-alert-error"
      data-element="errors"
      data-group="alert"
    ></ul>
    <div
      data-element="fields"
      data-stacked="false"
      class="seva-fields formkit-fields"
    >
      <div class="flex flex-auto formkit-field">
        <input
          class="w-full h-16 px-4 bg-gray-900 border-2 border-gray-800 formkit-input rounded-xl focus:border-teal focus:ring-teal focus:ring-1"
          name="email_address"
          aria-label="Enter your email"
          placeholder="Enter your email"
          required=""
          type="email"
        />
      </div>
      <button
        data-element="submit"
        class="
          formkit-submit formkit-submit
          mt-8
          bg-yellow
          text-black
          font-semibold
          rounded-lg
          w-full
          h-12
          leading-none
          px-2.5
          whitespace-nowrap
          hover:bg-teal
          hover:text-white
          focus:bg-teal
          focus:text-white
          transition
          duration-200
          focus:outline-none
          focus:ring focus:ring-teal focus:ring-opacity-50
          relative
          overflow-hidden
        "
      >
        <div class="formkit-spinner">
          <div></div>
          <div></div>
          <div></div>
        </div>
        <span class="font-semibold text-black"
          >Subscribe to newsletter for free</span
        >
      </button>
    </div>
  </div>
  <style>
    .formkit-form[data-uid="<%= ENV['CONVERTKIT_UID'] %>"] .formkit-alert-error {
      background: #fde8e2;
      border-color: #f2643b;
      color: #ea4110;
    }
    .formkit-form[data-uid="<%= ENV['CONVERTKIT_UID'] %>"] .formkit-spinner {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      height: 0px;
      width: 0px;
      margin: 0 auto;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      width: 0px;
      overflow: hidden;
      text-align: center;
      -webkit-transition: all 300ms ease-in-out;
      transition: all 300ms ease-in-out;
    }
    .formkit-form[data-uid="<%= ENV['CONVERTKIT_UID'] %>"] .formkit-spinner > div {
      margin: auto;
      width: 12px;
      height: 12px;
      background-color: #fff;
      opacity: 0.3;
      border-radius: 100%;
      display: inline-block;
      -webkit-animation: formkit-bouncedelay-formkit-form-data-uid-<%= ENV['CONVERTKIT_UID'] %>-
        1.4s infinite ease-in-out both;
      animation: formkit-bouncedelay-formkit-form-data-uid-<%= ENV['CONVERTKIT_UID'] %>- 1.4s
        infinite ease-in-out both;
    }
    .formkit-form[data-uid="<%= ENV['CONVERTKIT_UID'] %>"] .formkit-spinner > div:nth-child(1) {
      -webkit-animation-delay: -0.32s;
      animation-delay: -0.32s;
    }
    .formkit-form[data-uid="<%= ENV['CONVERTKIT_UID'] %>"] .formkit-spinner > div:nth-child(2) {
      -webkit-animation-delay: -0.16s;
      animation-delay: -0.16s;
    }
    .formkit-form[data-uid="<%= ENV['CONVERTKIT_UID'] %>"]
      .formkit-submit[data-active]
      .formkit-spinner {
      opacity: 1;
      height: 100%;
      width: 50px;
    }
    .formkit-form[data-uid="<%= ENV['CONVERTKIT_UID'] %>"]
      .formkit-submit[data-active]
      .formkit-spinner
      ~ span {
      opacity: 0;
    }
  </style>
</form>
