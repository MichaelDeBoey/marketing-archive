<%= form_with model: EarlyAccessUser.new do |f| %>
  <%= f.hidden_field :referrer_id, value: cookies[:referral] if cookies[:referral] %>
  <div class="h-24 inline-form-input-wrapper focus-within:inline-form-input-wrapper-gradient sm:h-16">
    <%= f.email_field :email, placeholder: 'Enter your email', class: 'flex-grow bg-transparent border-none appearance-none text-base sm:text-lg leading-none px-2 sm:px-4 mb-1 sm:mb-0 focus:outline-none focus:border-0 focus:ring-0' %>
    <%= f.submit "Get started", class: 'appearance-none flex-grow-0 flex-shrink-0 bg-teal text-black font-semibold rounded-lg w-full sm:w-auto h-10 sm:h-auto leading-none px-2.5 whitespace-nowrap hover:bg-teal-500 hover:text-black focus:bg-teal-500 focus:text-black transition-colors cursor-pointer' %>
  </div>
<% end %>
