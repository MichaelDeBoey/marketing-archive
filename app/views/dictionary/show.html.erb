<%- 
  title "#{@term[:term]} - Financial Dictionary"
  description "#{@term[:definition].gsub(%r{</?[^>]+?>}, '')[0...300]}..."
  legacy
-%>

<div class="max-w-7xl mx-auto mt-10 px-4 mb-18">
  <div class="grid auto-cols-fr lg:grid lg:grid-cols-12 gap-6 mb-6 z-10 relative h-full">
    <div class="lg:col-span-7">
      <%= render "term" %>
    </div>
    <div class="lg:col-span-5 h-full">
      <div class="flex flex-col md:grid md:grid-cols-2 lg:flex lg:flex-col gap-6 sticky top-6">
        <%= render "more_terms" %>
        <%= render "suggestion" %>
      </div>
    </div>
  </div>

  <%= render "social" %>
  <%= render "sparkline_1" %>
  <%= render "sparkline_2" %>
</div>

<%= render "partials/get-started" %>