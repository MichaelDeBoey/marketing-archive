<div class="h-full p-6 bg-gray-900 rounded-2xl sm:p-8 md:p-10">
  <div class="flex space-x-2 text-gray-400">
    <a href="/dictionary" class="hover:underline">
      Financial Dictionary
    </a>
    <i class="ri-arrow-right-s-line"></i>
    <span>
      <%= @term[:term] %>
    </span>
  </div>

  <div class="flex items-start justify-between mt-4 space-x-2 sm:mt-8">
    <div class="flex flex-col space-y-2">
      <div class="text-xl font-black text-white sm:text-3xl font-display group-hover:underline">
        <%= @term[:term] %>
      </div>
    </div>
  </div>

  <div class="mt-8">
    <div class="text-content contained-blockquote">
      <%= markdown @term[:definition] %>
    </div>
  </div>
</div>
