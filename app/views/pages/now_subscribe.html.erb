        <%= render 'partials/newsletter-sign-up' %>
        <p class="mt-5 text-base text-center text-gray-100">No charge. No spam. Unsubscribe anytime.</p>
      </div>
    </div>
  </div>
  <div class="absolute bottom-0 right-0 z-0 opacity-20 text-yellow js-background-swoop ">
    <svg width="893" height="206" viewBox="0 0 893 206" fill="none" xmlns="http://www.w3.org/2000/svg">
