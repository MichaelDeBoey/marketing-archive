<!-- Get started CTA -->
<section class="relative px-px pb-px overflow-hidden sm:mx-4 rounded-b-4xl" style="
    background-image: linear-gradient(0deg, #fff1 0%, transparent 100%),
      radial-gradient(farthest-corner at 50% 100%, #fff4 0%, transparent 50%);
  ">
  <div class="relative overflow-hidden bg-black rounded-b-4xl">
    <%= render "partials/get-started" %>
  </div>
</section>