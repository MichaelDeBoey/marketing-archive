<section class="relative px-8 pt-24 pb-8 -mt-24 overflow-hidden sm:pb-22 md:px-0">
  <div class="relative z-10 flex flex-col items-center mx-auto text-center mt-18 max-w-7xl">
    <h1 class="text-4xl font-semibold font-display md:text-5xl">
      <span class="gradient-heading">Your</span>
      <span class="gradient-heading">financial</span>
      <span class="gradient-heading">future,</span>
      <br class="hidden sm:inline" />
      <span class="gradient-heading">in</span>
      <span class="gradient-heading">your</span>
      <span class="gradient-heading">control</span>
    </h1>

    <p class="mt-1 text-lg sm:max-w-xl text-gray-50">
      Maybe gives you all the tools you need to manage your money and grow your wealth!
    </p>

    <a href="https://app.maybe.co/register"
      class="px-4 py-2 text-base font-medium text-black transition-colors bg-white rounded-lg mt-7 hover:bg-gray-25 duration-50">
      Get Started
    </a>
  </div>

  <div class="relative flex items-center justify-center w-full -my-52 sm:-my-32 md:-my-16" style="height: 900px">
    <div class="relative">
      <div class="absolute transform -translate-x-1/2 -translate-y-1/2 pointer-events-none select-none left-1/2 top-1/2"
        style="
          width: 185.2%;
          height: 194.5%;
          background-image: url('/img/home/grid-tunnel.svg');
          background-position: center;
          background-size: 100%;
      ">
        <div class="absolute inset-0 shadow-edge-sm md:shadow-edge-md lg:shadow-edge-lg"></div>
      </div>
      <!-- Glow -->
      <div class="absolute inset-0" style="
          background-image: conic-gradient(
            from 10deg,
            #52edff,
            #7209b7,
            #f12980,
            #4361ee,
            #52edff
          );
          filter: blur(100px);
        "></div>
      <!-- Outer border/shine -->
      <div id="preview-wrapper" class="relative p-px" style="
          --mx: 0;
          --my: 0;
          background-image:
            radial-gradient(20% 20% at calc(80% + var(--mx) * 10%) 0%, #3BC9DB, transparent),
            radial-gradient(20% 20% at calc(20% - var(--mx) * 10%) 100%, #F12980, transparent),
            linear-gradient(170deg, rgba(76, 201, 240, 0) 15.64%, #7209B7 45%, #4361EE 60%, rgba(247, 37, 133, 0) 85%);
      ">
        <!-- Actual preview -->
        <img src="/img/home/app-preview.svg" alt="App Preview" class="relative" />

        <!-- Top right light -->
        <div class="absolute top-0 transform -translate-y-1/2" style="
          right: -10%;
          width: 69%;
          height: 27%;
          background-image: radial-gradient(50% 50% at calc(40% + var(--mx) * 10%) 50%, #3BC9DB22, transparent 75%);
        "></div>

        <!-- Bottom left light -->
        <div class="absolute transform -translate-y-1/2 top-full" style="
          left: -10%;
          width: 69%;
          height: 27%;
          background-image: radial-gradient(50% 50% at calc(40% - var(--mx) * 10%) 50%, #F1298022, transparent 75%);
        "></div>
      </div>
      <div class="absolute z-40 hidden w-full pointer-events-none select-none md:block"
        style="right: -300px; top: -550px; height: 650px">
        <div class="absolute inset-0" style="
            background-image: conic-gradient(
              from 110deg at 90% -100%,
              #0000 80deg,
              #ffffff18 84deg,
              #ffffff1a 85deg,
              #ffffff19 86deg,
              #ffffff19 87deg,
              #ffffff2c 90deg,
              #ffffff2c 91deg,
              #ffffff24 93deg,
              #ffffff25 95deg,
              #ffffff23 97deg,
              #0000 100deg
            );
            mask-image: linear-gradient(to bottom, #fff 50%, transparent);
            -webkit-mask-image: linear-gradient(
              to bottom,
              #fff 50%,
              transparent
            );
          ">
          <div id="dust-canvas-wrapper" class="absolute inset-0" style="
              mask-image: conic-gradient(
                from 110deg at 90% -100%,
                #0000 65deg,
                #ffffff18 84deg,
                #ffffff1a 85deg,
                #ffffff19 86deg,
                #ffffff19 87deg,
                #ffffff2c 90deg,
                #ffffff2c 91deg,
                #ffffff24 93deg,
                #ffffff25 95deg,
                #ffffff23 97deg,
                #0000 115deg
              );
              -webkit-mask-image: conic-gradient(
                from 110deg at 90% -100%,
                #0000 65deg,
                #ffffff18 84deg,
                #ffffff1a 85deg,
                #ffffff19 86deg,
                #ffffff19 87deg,
                #ffffff2c 90deg,
                #ffffff2c 91deg,
                #ffffff24 93deg,
                #ffffff25 95deg,
                #ffffff23 97deg,
                #0000 115deg
              );
            ">
            <canvas id="dust-canvas" width="100%" height="100%"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Track everything, all in one place -->
<section id="track" class="relative px-px pt-px overflow-hidden sm:mx-4 rounded-t-4xl" style="
    background-image: linear-gradient(180deg, #fff1 0%, transparent 100%),
      radial-gradient(farthest-corner at 65% 0%, #fff4 0%, transparent 50%);
  ">
  <div class="relative px-8 overflow-hidden bg-black pt-22 pb-11 rounded-t-4xl">
    <div class="absolute top-0 transform -translate-x-1/2 left-1/2">
      <%= render partial: "partials/home/track_everything/bg" %>
    </div>
    <div class="absolute inset-0" style="box-shadow: inset 0 0 100px 100px #16161a"></div>
    <div class="relative text-center">
      <h2 class="text-3xl font-semibold font-display md:text-4xl">
        <span class="gradient-heading">Track</span>
        <span class="gradient-heading">everything,</span>
        <br class="hidden sm:inline" />
        <span class="gradient-heading">all</span>
        <span class="gradient-heading">in</span>
        <span class="gradient-heading">one</span>
        <span class="gradient-heading">place</span>
      </h2>
      <p class="mx-auto mt-1 text-lg sm:max-w-xl text-gray-50">
        Stop wrangling custom sheets and jumping between browser tabs.
        Maybe brings all of your accounts under one roof, automatically.
      </p>
      <div class="pt-32 mt-64">
        <%= render partial: "partials/home/track_everything/features" %>
      </div>
    </div>
  </div>
</section>

<!-- Simulate your financial maybes -->
<section id="forecast" class="relative px-8 overflow-hidden sm:mx-4 py-11">
  <div class="absolute transform -translate-x-1/2 -z-10 left-1/2">
    <%= render partial: "partials/home/simulate_maybes/bg" %>
  </div>
  <div class="absolute inset-0" style="box-shadow: inset 0 0 75px 100px #16161a"></div>
  <div class="relative text-center">
    <h2 class="text-3xl font-semibold font-display md:text-4xl">
      <span class="gradient-heading">Simulate</span>
      <span class="gradient-heading">your</span>
      <br class="hidden sm:inline" />
      <span class="gradient-heading">financial</span>
      <span class="gradient-heading">maybes</span>
    </h2>
    <p class="mx-auto mt-1 text-lg sm:max-w-xl text-gray-50">
      Run simulations to visualize different milestones like reaching financial independence, starting a business or
      buying your first home.
    </p>
    <div class="pt-32 mt-64">
      <%= render partial: "partials/home/simulate_maybes/features" %>
    </div>
  </div>
</section>

